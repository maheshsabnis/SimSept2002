@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>List of Roles</h2>

@Html.ActionLink("Create Role", "Create")

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Name
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <td>
                @Html.ActionLink("Assign Role To User", "AssignRoleToUser", "Account")
            </td>
        </tr>
    </tfoot>
</table>
