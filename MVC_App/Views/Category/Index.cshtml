@model IEnumerable<Application.Model.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <!--Take HTTP Get request to 'Create' action method of the CategoryController-->
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasePrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasePrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryUniqueId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CategoryUniqueId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryUniqueId })
        </td>
    </tr>
}

</table>
